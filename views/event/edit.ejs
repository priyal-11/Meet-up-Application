<%- include('../partials/header.ejs')%>

    <main>
      <form method="post" action="/connections/<%= event._id%>?_method=PUT">
        <table>
        <div class="div7">
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Topic</label>
                <div class="col-sm-8">
                  <input type="text" name="topic" value="<%= event.topic%>" class="form-control" required>
                </div>
              </div>
      
              <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Title</label>
                <div class="col-sm-8">
                  <input type="text" name="title" value="<%= event.title%>" class="form-control" required>
                </div>
              </div>
      
              <div class="row mb-3">
                  <label class="col-sm-2 col-form-label">Host</label>
                  <div class="col-sm-8">
                    <input type="text" name="host" value="<%= event.host%>" class="form-control" required>
                  </div>
                </div>
      
                <div class="row mb-3">
                  <label class="col-sm-2 col-form-label">Details</label>
                  <div class="col-sm-8">
                    <input type="text" name="details" value="<%= event.details%>" class="form-control" required minlength="10">
                    
                  </div>
                </div>
      
                <div class="row mb-3">
                  <label class="col-sm-2 col-form-label">Where</label>
                  <div class="col-sm-8">
                    <input type="text" name="where" value="<%= event.where%>" class="form-control" required>
                  </div>
                </div>  
      
                <div class="row mb-3">
                  <label class="col-sm-2 col-form-label">When</label>
                  <div class="col-sm-2">
                    <input type="date" name="when" value="<%= event.when%>" class="form-control" pattern="\d{4}-\d{2}-\d{2}" required>
                  </div>
                </div>
                
      
                <div class="row mb-3">
                  <label class="col-sm-2 col-form-label">Start time</label>
                  <div class="col-sm-2">
                    <input type="time" name="starttime" value="<%= event.starttime%>" class="form-control" required>
                  </div>
                </div>
                
                <div class="row mb-3">
                  <label class="col-sm-2 col-form-label">End Time</label>
                  <div class="col-sm-2">
                    <input type="time" name="endtime" value="<%= event.endtime%>" class="form-control" required>
                  </div>
                </div>
               
                <div class="row mb-3">
                  <label class="col-sm-2 col-form-label">Image</label>
                  <div class="col-sm-8">
                    <input type="url" name="image" value="<%= event.image%>" class="form-control" required>
                  </div>
                </div>
                <button class="btn btn-primary" id="btn2">Submit</button>
        </div> 
        </table>
      </form>     
    </main>

    <%- include('../partials/footer.ejs')%>   