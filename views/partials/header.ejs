<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <title>Final Project</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>
  <body>
    <!--Header-->
    <header>
        <div class="div1">
            <a href="/"><img src="/images/logo2.jpg" alt="logo" class="image" ></a>
        </div>

        <div class="div2">
            <p>
                
                <%if(!user){%>
                  <a href="/users/login" id="btn4" class="btn btn-outline-primary">Login</a>
                  <a href="/users/new" class="btn btn-outline-secondary">Signup</a>
                <%}else{%>
                  <a class="a1" href="/connections/new"> Set up a New Event</a>
                  <a href="/users/profile" class="btn btn-outline-info">Profile</a>
                  <a href="/users/logout" class="btn btn-outline-danger">Logout</a>
                <%}%>
                
                
            </p>
        </div>
    </header>
    <!--Header End-->

    <!--Navigation bar-->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
          <div class="collapse navbar-collapse">
            <ul class="navbar-nav">
              <li class="nav-item">
                <div>
                  <a class="a1" aria-current="page" href="/connections">Events</a>
                </div>
              </li>
              <li>
                <div class="div8">
                  <%if(user){%>
                    <p class="p4">Welcome, <%= user.firstName%></p>
                  <%}%>
                </div>
                
              </li>
            </ul>
          </div>
        </div>
      </nav>
    <!--Navigation bar end-->

   <% if(errorMessages.length > 0){
      errorMessages.forEach(message=>{%>
        <div class="error"><%=message%></div>
      <%});
   }%>

   <% if(successMessages.length > 0){
    successMessages.forEach(message=>{%>
      <div class="success"><%=message%></div>
    <%});
 }%>